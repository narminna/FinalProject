@model string

@if (!string.IsNullOrEmpty(Model))
{
    <div class="alert alert-danger" role="alert">
        @Model
    </div>
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/style/css/login.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <title>Login</title>
</head>
<body>
    <header class="header">
        <div class="top-bar flex gap-4 font-semibold text-white">
            <a href="/html/main.html">Home</a>
            <a href="/html/about.html">About</a>
            <a href="#">Group List</a>
            <a href="#">Contact</a>
            <a href="/html/fun.html">Spots</a>
        </div>
        <div class="right flex text-[#fff] justify-center items-center gap-2">
            <div class="search">
                <div class="box">
                    <input type="text" placeholder="Search...">
                    <a href="#">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </a>
                </div>
            </div>
            <i class="fa-solid fa-user text-[20px]"></i>
        </div>
    </header>
    <div class="background"></div>
    <section class="home">
        <div class="content flex flex-col w-[700px] my-[40px]">
            <a href="#" class="logo relative text-[#fff] text-[3em] font-bold top-[-40px] left-[80px]">
                <i class="fa-solid fa-paper-plane"></i>
                ExploreMap
            </a>
            <h2 class="welcome text-[3.5em] text-center text-[#fff] tracking-[10px]">Welcome!</h2>
            <h3 class="text-[2em] text-center text-[#fff]">To Our Website</h3>
            <div class="icon mt-[20px] text-[1.5em] flex gap-3 justify-center">
                <i class="fa-brands fa-instagram"></i>
                <i class="fa-brands fa-facebook"></i>
                <i class="fa-brands fa-twitter"></i>
            </div>
        </div>
        <div class="login w-[450px] relative py-[100px] px-[30px] text-[#fff]">
            <h2 class="text-[2em] text-center mb-[20px] text-[#fff]">Login</h2>
            <div class="input">
                <input type="text" class="input1 bg-transparent outline-none" placeholder="Email" required>
                <i class="fa-solid fa-envelope relative"></i>
            </div>
            <div class="input">
                <input type="text" class="input2 bg-transparent outline-none border-none" placeholder="Password" required>
                <i class="fa-solid fa-lock"></i>
            </div>
            <div class="check">
                <label><input type="checkbox">Remember me</label>
                <a href="#">Forgot Password?</a>
            </div>
            <div class="button flex w-[100%] h-[40px] bg-[crimson] text-[20px] font-semibold rounded-[7px]">
                <button class="btn">Login</button>
            </div>
            <div class="sign-up flex justify-center gap-2">
                <p>Don't have an account?</p>
                <a href="#" class="font-semibold">Sign up</a>
            </div>
        </div>
    </section>
    <section>
        <div class="cnt flex flex-col justify-center items-center py-[10px]">
            <div class="e-mail">
                <a data-auto-recognition="true" href="mailto:explrbaku22@gmail.com" class="text-[#19226b] text-[14px]">explrbaku24@gmail.com</a>
            </div>
            <div class="cont">
                <span class="text-[#19226b] text-[14px] ">© ExploreBaku, 2024</span>
            </div>
        </div>
    </section>
</body>
<script src="https://cdn.tailwindcss.com"></script>
<script src="~/js/login.js"></script>
</html>